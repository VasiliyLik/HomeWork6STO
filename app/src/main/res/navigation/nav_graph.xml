<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:defaultNavHost="true"
    app:startDestination="@id/carListFragment">

    <fragment
        android:id="@+id/carListFragment"
        android:name="com.likchachevskiy.android.mysto.ui.screens.listcar.ListCarFragment"
        android:label="fragment_car_list"
        tools:layout="@layout/fragment_car_list">


        <action
            android:id="@+id/action_carListFragment_to_addCarFragment"
            app:destination="@id/addCarFragment" />
        <action
            android:id="@+id/action_carListFragment_to_detailCarFragment"
            app:destination="@id/detailCarFragment" />
    </fragment>

    <fragment
        android:id="@+id/addCarFragment"
        android:name="com.likchachevskiy.android.mysto.ui.screens.addcar.AddCarFragment"
        android:label="fragment_add_car"
        tools:layout="@layout/fragment_add_car">

        <action
            android:id="@+id/action_addCarFragment_to_carListFragment"
            app:destination="@id/carListFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_graph" />
    </fragment>

    <fragment
        android:id="@+id/detailCarFragment"
        android:name="com.likchachevskiy.android.mysto.ui.screens.detailcar.DetailCarFragment"
        android:label="fragment_car_detail"
        tools:layout="@layout/fragment_car_detail">

        <action
            android:id="@+id/action_detailCarFragment_to_carListFragment"
            app:destination="@id/carListFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_graph" />
    </fragment>
    <fragment
        android:id="@+id/carWorkEmptyListFragment"
        android:name="com.likchachevskiy.android.mysto.CarWorkEmptyListFragment"
        android:label="fragment_car_work_empty_list"
        tools:layout="@layout/fragment_car_work_empty_list" />
</navigation>